{
    "name": "miladyousefi/whmcs",
    "description": "Framework for creating WHMCS addon modules.",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/miladyousefi/whmcs"
        }
    ],
    "require": {
        "php": ">=8.0",
        "miladyousefi/whmcs": "dev-main",
        "symfony/console": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "WHMCS\\Module\\Addon\\": "src/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "php commands/SetupCommand.php"
        ]
    },
    "extra": {
        "installer-name": "whmcs-addon"
    }
}
